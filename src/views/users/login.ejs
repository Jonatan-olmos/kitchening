<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs',{title : "login"}) %>

  <body >
   
    <main class="d-flex flex-column justify-content-between" >
      <%- include('../partials/heder.ejs') %>

      <section class="row">
        <div class="col-12 col-md-10 col-lg-6 mx-auto my-5">
          <div class="card shadow">
            <div class="card-header">
              <h4 class="card-title">Login de Usuario</h4>
            </div>
            <div class="card-body">
              <form action="" class="row">
                <div class="mb-3">
                  <label for="email" class="form-label"
                    >Correo Electronico</label
                  >
                  <input
                    type="email"
                    name="email"
                    class="form-control"
                    id="email"
                    placeholder="name@example.com"
                  />
                </div>

                <div class="col-12 mb-3 " >
                  <label for="passward" class="form-label">Contrase√±a</label>
                  <input
                    type="passward"
                    name="passward"
                    class="form-control"
                    id="passward"
                  />
                </div>
                <div class="col-12 col-md-6 mb-3 " >

                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="remember"
                    name="remember"
                  />
                  <label class="form-check-label" for="remember">
                    Recordame
                  </label>
                </div>
                </div>
                <div class="col-12 col-md-6 mb-3 " >

                <div class="d-flex justify-content-end">
                  <button class="btn btn-dark w-100">Ingresar</button>
                    </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
